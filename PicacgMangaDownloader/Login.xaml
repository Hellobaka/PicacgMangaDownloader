<Window
    x:Class="PicacgMangaDownloader.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PicacgMangaDownloader"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Login"
    Width="450"
    Height="352"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TabControl>
            <TabItem Header="用户名密码">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid Margin="10,5" VerticalAlignment="Bottom">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock VerticalAlignment="Center" Text="用户名：" />
                        <TextBox Grid.Column="1" />
                    </Grid>
                    <Grid
                        Grid.Row="1"
                        Margin="10,5"
                        VerticalAlignment="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Width="48"
                            VerticalAlignment="Center"
                            Text="密码：" />
                        <TextBox Grid.Column="1" />
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Token">
                <Grid Margin="10,5" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock VerticalAlignment="Center" Text="Token：" />
                    <TextBox Grid.Column="1" />
                </Grid>
            </TabItem>
        </TabControl>
        <Button
            Grid.Row="1"
            Margin="5"
            HorizontalAlignment="Stretch"
            Content="登录"
            Style="{StaticResource ButtonPrimary}" />
    </Grid>
</Window>
