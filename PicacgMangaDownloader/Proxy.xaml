<Window
    x:Class="PicacgMangaDownloader.Proxy"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PicacgMangaDownloader"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="代理"
    Width="400"
    Height="400"
    Icon="Resources\ico.ico"
    Loaded="Window_Loaded"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid Margin="10,5" VerticalAlignment="Bottom">
            <ToggleButton
                Name="UseProxySelector"
                HorizontalAlignment="Left"
                Content="使用代理"
                Style="{StaticResource ToggleButtonSwitch}" />
        </Grid>
        <Grid
            Grid.Row="1"
            Margin="10,5"
            VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock VerticalAlignment="Center" Text="Http代理：" />
            <TextBox
                Name="HttpProxyUrl"
                Grid.Column="1"
                Text="http://127.0.0.1:7897" />
        </Grid>
        <Button
            Name="SaveButton"
            Grid.Row="2"
            Margin="5"
            HorizontalAlignment="Stretch"
            Click="SaveButton_Click"
            Content="保存"
            Style="{StaticResource ButtonPrimary}" />
    </Grid>
</Window>
